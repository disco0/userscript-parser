{
    "extends": "@tsconfig/node12/tsconfig.json",
    "include": 
    [
        "src/globals.d.ts",
        "src/**/*"
    ],
    "exclude": 
    [
        "node_modules",
        "src/test/**/*"
    ],
    "compilerOptions": 
    {
        "rootDir": "./src",
        "baseUrl": "./src",
        "outDir": "./dist",
        "composite": true,

        "typeRoots": ["./node_modules/@types"],
        "moduleResolution": "Node",

        "declaration": true,
        "declarationDir": "./types",

        "listEmittedFiles": true,
        "pretty": true,
        "preserveWatchOutput": true
    },
    "typeAcquisition": 
    {
        "enable": true
    }
}